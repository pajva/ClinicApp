<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DoctorActivity">

    <ImageView
        android:id="@+id/clinic_img1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/obesity"/>

    <TextView
        android:id="@+id/clinic_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Clinic_name"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/clinic_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:padding="10dp"
            android:text="location" />

        <TextView
            android:id="@+id/clinic_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_baseline_star_border_24"
            android:paddingRight="50dp"
            android:text="Rating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_txt4"
            android:layout_below="@id/clinic_txt3"
            android:text="Services"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textColor="#2979FF"
            />
    </RelativeLayout>

</LinearLayout>